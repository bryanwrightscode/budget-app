@model FinancialPortal.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="row bg-image"></div>
<div class="row bg-gradient"></div>
<div class="row under-bg-image">
    <div class="col-sm-6 col-md-4">
        <h1 class="text-success" >Budget <span class="text-muted text">by Bryan</span></h1>
        <p class="lead">Join a household or create your own. Begin tracking transactions and comparing actual spending to projections.</p>
    </div>
    <div class="col-sm-6 col-md-6">
        <h3>@ViewBag.Title</h3>
        <p>Create a new account.</p>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
