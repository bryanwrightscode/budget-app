@model FinancialPortal.Models.Viewmodels.CreateBankAccountViewModel
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-lg-4 col-md-6">
        @using (Html.BeginForm("Create", "BankAccounts", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.BankAccountTypeSelection)<br />
                @foreach (var type in Model.BankAccountTypeList)
                {
                    @Html.RadioButtonFor(m => m.BankAccountTypeSelection, type.Key) @type.Value<br />
                }
                @Html.ValidationMessageFor(m => m.BankAccountTypeSelection, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BankAccountBalance)<br />
                <div class="input-group">
                    <span class="input-group-addon">$</span>
                    @Html.EditorFor(
                   m => m.BankAccountBalance,
                   new { htmlAttributes = new {
                       @type = "number", @min = "-999999999.99", @max = "999999999.99",
                       @step = "0.01", @class = "form-control", aria_label = "Account Balance"
                   } })
                </div>
                @Html.ValidationMessageFor(m => m.BankAccountBalance, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NickName)<br />
                @Html.TextBoxFor(m => m.NickName, new { @class = "form-control" })<br />
                @Html.ValidationMessageFor(m => m.NickName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BankNameSelection)
                @Html.DropDownListFor(m => m.BankNameSelection, Model.BankNameList, "", new { @class = "form-control" })<br />
                @Html.ValidationMessageFor(m => m.BankNameSelection, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" role="button" class="btn btn-default" value="Submit" />
            </div>
        }
    </div>
</div>
